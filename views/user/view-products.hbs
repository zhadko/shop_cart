
      <section>
        <div class="row">
          {{#each products}}
            <div class="col-md-3 p-3">
          <div class="card" style="width: 15rem; height:23rem">
  <img src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{this.Name}}</h5>
    <p class="card-text">{{this.Description}}</p>
    <p class="cart-text">Rs {{this.Price}}</p>
    <button onclick="addToCart('{{this._id}}')" class="btn btn-primary" >Add to cart</button>
  </div>
</div>
        </div>
          {{/each}}
        </div>
      </section>

<script>
  function addToCart(proId){
    $.ajax({
      url:'/add-to-cart/'+proId,
      method:'get',
      success:(response)=>{
        if(response.status){
          let count=$('#cart-count').html()
          count=parseInt(count)+1
          $("#cart-count").html(count)
        }
      }
    })
  }

</script>